{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "process",
      "label": "(vscode) test",
      "group": "test",
      "command": "./run_tests.sh"
    },
    {
      "type": "process",
      "label": "(vscode) test file",
      "group": "test",
      "command": "./run_tests.sh",
      "args": ["${file}"]
    },
    {
      "type": "process",
      "label": "(vscode) prompt input",
      "group": "test",
      "command": "echo",
      "args": ["${input:word}"]
    },
    {
      "type": "process",
      "label": "(vscode) background",
      "command": "./tests/fake_background_task.sh",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^:]+):(\\d+)",
          "file": 1,
          "line": 2
        },
        "background": {
          "activeOnStart": false,
          "beginsPattern": "^START$",
          "endsPattern": "^END$"
        }
      }
    }
  ],
  "inputs": [
    {
      "id": "word",
      "description": "This is a word",
      "type": "promptString"
    }
  ]
}
